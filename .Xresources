!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! rxvt-unicode terminal emulator settigns
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

! Set transparency for urxvt
URxvt*.transparent: true
!URxvt*.shading: 0 to 99 darkens, 101 to 200 lightens
URxvt*.shading: 20
!URxvt*blurRadius: 5
URxvt.scrollBar: off

! Font
!! Terminus
URxvt.font:    xft:Terminus-10:hinting=True;antialias:True

!! Source Code Pro
!URxvt.font:    xft:Source Code Pro for Powerline-10:hinting=True;antialias:Truexft:Source Code Pro for Powerline-10:hinting=True;antialias:True

!! Hack
!URxvt.font:    xft:Hack:size=10:hinting=True;antialias:True

! Borders
URxvt.internalBorder: 10
!URxvt.externalBorder: 5

! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! Enable clickable URLs
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,matcher,resize-font
URxvt.url-launcher: google-chrome-stable
URxvt.url-select.underline: true
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.keysym.M-Escape: perl:keyboard-select:active
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.matcher.button: 1
! Change font size on the fly (perl-ext-common: resize-font)
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up

! command to run on BEL
URxvt.bell-command: notify-send "ding, ding"

! Font Settings
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

